
<%= form_tag "/client/products", method: :get do %>
  <input type="text" name="client_search_name" placeholder="search by">
  <input type="text" name="client_sort_by" placeholder="sort">
  <input type="submit" value="SEARCH ">
<% end %>

<% @products.each do |product| %>
  <h2><a href="/client/products/<%= product["id"] %>"><%= product["name"] %></a></h2>
  <h3><%= product["price"] %></h3>
  
  <h4><%= product["description"] %></h4>
  
  <% product["images"].each do |image| %>
    <img src="<%= image['url'] %>" alt="">
  <% end %>
<% end %>