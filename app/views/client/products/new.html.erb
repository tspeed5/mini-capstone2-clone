<%= form_tag "/client/products", method: :post do %>
<div>
    Name: <input type= "text" name="input_name">
</div>
<div>
    Price: <input type= "text" name="input_price">
</div>
<div>
    Image URL: <input type= "text" name="input_image_url">
</div>
<div>
    Description: <input type= "text" name="input_description">
</div>
<div>
    <input type= "submit" value="MAKE A NEW PRODUCT">
</div>

<% end %>